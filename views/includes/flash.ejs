<% if(success && success.length){ %>
<div
  class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative col-span-6 col-start-4 mb-4"
  role="alert"
>
  <%= success %>
  <span
    class="absolute top-0 bottom-0 right-0 px-4 py-3"
    onclick="this.parentElement.remove();"
  >
    <svg
      class="fill-current h-6 w-6 text-green-500"
      role="button"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 20 20"
    >
      <path
        d="M14.348 14.849a1 1 0 01-1.414 0L10 11.914l-2.934 2.935a1 1 0 01-1.414-1.415L8.586 10 5.651 7.065a1 1 0 011.414-1.414L10 8.586l2.935-2.935a1 1 0 011.414 1.414L11.414 10l2.935 2.935a1 1 0 010 1.414z"
      />
    </svg>
  </span>
</div>
<% } %> <% if(error && error.length){ %>
<div
  class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative col-span-6 col-start-4 mb-4"
  role="alert"
>
  <%= error %>
  <span
    class="absolute top-0 bottom-0 right-0 px-4 py-3"
    onclick="this.parentElement.remove();"
  >
    <svg
      class="fill-current h-6 w-6 text-red-500"
      role="button"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 20 20"
    >
      <path
        d="M14.348 14.849a1 1 0 01-1.414 0L10 11.914l-2.934 2.935a1 1 0 01-1.414-1.415L8.586 10 5.651 7.065a1 1 0 011.414-1.414L10 8.586l2.935-2.935a1 1 0 011.414 1.414L11.414 10l2.935 2.935a1 1 0 010 1.414z"
      />
    </svg>
  </span>
</div>
<% } %>

